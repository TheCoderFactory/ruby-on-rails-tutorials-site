

<div class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
			  <h1><%= @page_title %></h1>
			  <p class="lead"><%= @page_subtitle %></p>
			  <hr class="m-y-md">
			  <% if controller.controller_name == "tutorials" && controller.action_name == "show" %>
			  	<p>Author: <%= link_to @author.full_name, author_path(@author) %> <span class="pull-right">Last updated: 
			  	<%= @tutorial.updated_at.strftime('%d %B %Y') %></span></p>
			  	<% @tutorial.tags.each do |tag| %>
			  		<%= link_to tag, tutorials_path(tag: tag.name), class: 'btn btn-default' %>
			  	<% end %>
			  	<span class="pull-right">
			  		<!-- <a href="/" class="btn btn-default"><i class="fa fa-thumbs-up"></i> Like</a> -->
			  		<a href="/" class="btn btn-default"><i class="fa fa-download"></i> Download</a> 
			  		<a href="/" class="btn btn-default"><i class="fa fa-share"></i> Share</a>
			  		<a href="/" class="btn btn-default"><i class="fa fa-github"></i> Github</a>
			  <% end %>
			</div>
			<!-- <div class="col-md-4">
				
			</div> -->
		</div>
	</div>
</div>