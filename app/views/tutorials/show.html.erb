<%= content_for :title, @tutorial.title %>
<% @page_title = 'Ruby on Rails Tutorials: ' + @tutorial.title %>
<% @page_subtitle = @tutorial.intro.html_safe %>


<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-body tutorial">
        <% unless @tutorial.image.blank? %>
          <%= image_tag @tutorial.image %>
        <% end %>
        <%= @tutorial.content.html_safe %>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_tutorial_path(@tutorial) %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default" id="comments">
      <div class="panel-body">
        <h4>Comments, questions, discussion</h4>
        <% if user_signed_in? %>
          <%= render 'comments/form' %>
        <% else %>
          <%= link_to 'Sign in to comment, ask a question or join in the discussion', new_user_session_path %>
        <% end %>
        <hr>
        <% @comments.each do |comment| %>
        <blockquote>
          <p><strong><i class="fa fa-user"></i>  <%= comment.user.email %></strong> <i class="fa fa-calendar"></i> <%= comment.created_at.strftime('%d %b %Y') %></p>
          <p><%= comment.content %></p>
        </blockquote>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <p class="lead">Weekly tutorials</p>
        <p><small>Want to be notified when a new tutorial is posted?</small></p>
        <form class="form-inline">
          <div class="input-group margin-bottom-sm">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <input class="form-control" type="text" placeholder="Email address">
          </div>
            <button type="submit" class="btn btn-default">Send</button>
        </form>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <span class="lead">
          Popular tutorials

        </span>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <span class="lead">
          New tutorials
        </span>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <span class="lead">
          Request tutorials
        </span>
      </div>
    </div>
  </div>
</div>




