<p id="notice"><%= notice %></p>

<h1>Listing Tutorials</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Slug</th>
      <th>Intro</th>
      <th>Content</th>
      <th>Image</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.user %></td>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.slug %></td>
        <td><%= tutorial.intro %></td>
        <td><%= tutorial.content %></td>
        <td><%= tutorial.image %></td>
        <td><%= tutorial.published %></td>
        <td><%= link_to 'Show', tutorial %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

